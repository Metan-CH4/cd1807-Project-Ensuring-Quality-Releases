{
	"info": {
		"_postman_id": "4db1f578-0a95-4c47-8d66-b392a4c322fa",
		"name": "Data Validation",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "13323373"
	},
	"item": [
		{
			"name": "Create User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"pm.environment.set(\"user_id\", jsonData.data._id);\r",
							"\r",
							"pm.test(\"Create new user complete!\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(\"User registered successfully!\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"first_name\": \"{{first_name}}\",\r\n    \"last_name\": \"{{last_name}}\",\r\n    \"email\": \"{{email}}\",\r\n    \"mobile_no\": \"{{mobile_no}}\",\r\n    \"password\": \"{{password}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{url2}}/api/v1/users",
					"host": [
						"{{url2}}"
					],
					"path": [
						"api",
						"v1",
						"users"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var user_id22 = pm.environment.get(\"user_id\")\r",
							"pm.test(\"Body has user_id\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(user_id22);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{url2}}/api/v1/users/{{user_id}}",
					"host": [
						"{{url2}}"
					],
					"path": [
						"api",
						"v1",
						"users",
						"{{user_id}}"
					]
				}
			},
			"response": []
		}
	]
}
